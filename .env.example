# ============================================
# ANALYST MARKETPLACE PLATFORM - BACKEND ENV
# ============================================

# Application
NODE_ENV=development
PORT=5000

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/analyst_platform
DB_HOST=localhost
DB_PORT=5432
DB_NAME=analyst_platform
DB_USER=postgres
DB_PASSWORD=your_secure_password

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_secret_key_change_this_in_production
JWT_REFRESH_EXPIRE=30d

# ============================================
# FRONTEND
# ============================================
FRONTEND_URL=http://localhost:5173

# ============================================
# RAZORPAY PAYMENTS
# ============================================
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_key
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret_key

# ============================================
# CLAUDE API (Anthropic)
# ============================================
CLAUDE_API_KEY=sk-ant-api03-xxxxxxxxxxxxx
CLAUDE_MODEL=claude-sonnet-4-5-20250929
# Note: Use the latest Sonnet 4.5 model for best performance
# Temperature: 0.1 (low for consistency in AI call formatting)
# Max tokens: 1024 (sufficient for structured JSON output)

# ============================================
# CLOUDINARY (File Upload & Storage)
# ============================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================
# RESEND (Email Service)
# ============================================
RESEND_API_KEY=re_xxxxxxxxxxxxx
EMAIL_FROM=noreply@analystplatform.com
EMAIL_FROM_NAME=Analyst Marketplace

# ============================================
# TWILIO (SMS/OTP Service)
# ============================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# FILE UPLOAD LIMITS
# ============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# ============================================
# CRON JOBS
# ============================================
ENABLE_CRON_JOBS=true
PAYMENT_RETRY_CRON=0 9 * * *
EMAIL_DIGEST_CRON=0 8 * * *

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# ============================================
# SECURITY
# ============================================
BCRYPT_ROUNDS=10
OTP_EXPIRY_MINUTES=10
SESSION_TIMEOUT_MINUTES=60

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_AI_FEATURES=true
ENABLE_CHAT=true
ENABLE_NOTIFICATIONS=true
